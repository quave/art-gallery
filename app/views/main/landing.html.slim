#gallery
  header
    dl.sub-nav
      dd.category-all
        a.category.category-0{data-id=0} Все
      - @categories.each do |c|
        dd.category{class= "category-#{c.id}" data-id=c.id}
          a= c.name

  .works.row
    .col-1.columns.medium-4
      - @works.each_with_index do |w, i|
        -if i % 3 == 0
          = render w

    .col-2.columns.medium-4
      - @works.each_with_index do |w, i|
        -if i % 3 == 1
          = render w

    .col-3.columns.medium-4
      - @works.each_with_index do |w, i|
        -if i % 3 == 2
          = render w

